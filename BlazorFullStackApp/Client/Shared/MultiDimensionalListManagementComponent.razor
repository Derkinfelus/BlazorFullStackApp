@inject IMultiDimensionalListService MultiDimensionalListService


@if (transporterToEdit.Id == -1)
{
    <h2>Create new element</h2>
}
else
{
    <h2>Edit element</h2>
}


<EditForm Model="transporterToEdit" OnSubmit="OnEditFormSubmit">
    <div class="form-group">
        <label>Name</label>
        <InputText @bind-Value="transporterToEdit.Name" class="form-control">Name</InputText>
    </div>
    <div class="form-group">
        <label>Data</label>
        <InputNumber @bind-Value="transporterToEdit.Data" class="form-control">Data</InputNumber>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>


@code {
    [Parameter]
    public OpenableMultiDimensionalList transporterToEdit { get; set; } = new OpenableMultiDimensionalList();
    [Parameter]
    public int id { get; set; } = new int();

    async void OnEditFormSubmit()
    {
        if (transporterToEdit.Id == -1)
            await MultiDimensionalListService.PostElement(id, transporterToEdit);
